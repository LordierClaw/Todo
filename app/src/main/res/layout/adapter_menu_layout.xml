<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    style="@style/NavItem">
    <RelativeLayout
        android:id="@+id/adapter_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <ImageView
            android:id="@+id/adapter_menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bulleted_list_24"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            style="@style/NavItem.Icon"/>
        <TextView
            android:id="@+id/adapter_menu_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_task_group"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/adapter_menu_icon"
            android:layout_centerVertical="true"
            style="@style/NavItem.Title"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>