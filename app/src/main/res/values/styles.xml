<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Toolbar">
        <item name="android:background">@color/md_theme_light_background</item>
    </style>
    <style name="Toolbar.Header">
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>
    <style name="Toolbar.MenuButton">
        <item name="android:tint">@color/md_theme_light_primary</item>
    </style>

    <style name="NavDrawerHeader">
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>
    <style name="NavDrawerHeader.Name" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
    </style>
    <style name="NavDrawerHeader.Email" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
    </style>

    <style name="NavItem">
        <item name="cardCornerRadius">28dp</item>
        <item name="cardBackgroundColor" tools:ignore="PrivateResource">@color/m3_navigation_item_background_color</item>
        <item name="cardElevation">0dp</item>
    </style>
    <style name="NavItem.Title" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="NavItem.Icon">
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="NavItem.Checked" parent="NavItem">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
    </style>
    <style name="NavItem.Title.Checked" parent="NavItem.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="NavItem.Icon.Checked" parent="NavItem.Icon">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
</resources>